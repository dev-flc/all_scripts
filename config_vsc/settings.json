{
    "workbench.colorTheme": "Ayu Dark Bordered",
    "workbench.iconTheme": "material-icon-theme",
    "window.zoomLevel": 0,
    "workbench.editor.labelFormat": "short",

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "jspm_packages": true,
        "**/node_modules": true,
        "node_modules": true,
        ".sonar": true,
        "manifest.json": true,
        ".gitignore": true,
        //".editorconfig": true,
        "debug.log": true,
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/node_modules": true,
    },

    "editor.fontFamily"    : "'Fira Code'",
    "editor.fontLigatures" : true,
    "editor.fontSize"      : 17,
    "editor.formatOnPaste" : false,
    "editor.insertSpaces"  : false,

    // "editor.renderWhitespace": "all"
    "todo-tree.tags" : ["TODO","FIXME","ALAN","ROGELIO","JAIR", "FRAN", "DAMIAN" ],

    // "todo-tree.defaultHighlight": {
    //     "icon": "alert",
    //     "type": "text",
    //     "foreground": "red",
    //     "background": "white",
    //     "opacity": 50,
    //     "iconColour": "blue"
    // },
    "todo-tree.customHighlight": {

        "TODO": {
            "icon": "check",
            "type": "line"
        },

        "FIXME": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#ff4081"
        },

        "ALAN": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#9b59b6"
        },

        "ROGELIO": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#2e86c1"
        },

        "JAIR": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#34495E"
        },

        "FRAN": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#000000"
        },

        "DAMIAN": {
            "icon"      : "flame",
            "foreground": "#FFF",
            "iconColour": "#D35400"
        },
    },

    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "NOTE:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(39, 174, 96)",
            "overviewRulerColor": "rgba(39, 174, 96,.2)"
        },

        {
            "text": "ALAN:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(155, 89, 182)",
            "overviewRulerColor": "rgba(155, 89, 182,.2)"
        },

        {
            "text": "ROGELIO:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(46, 134, 193)",
            "overviewRulerColor": "rgba(46, 134, 193,.2)"
        },

        {
            "text": "JAIR:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(52, 73, 94)",
            "overviewRulerColor": "rgba(52, 73, 94,.2)"
        },

        {
            "text": "FRAN:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(000, 000, 000)",
            "overviewRulerColor": "rgba(000, 000, 000,.2)"
        },

        {
            "text": "DAMIAN:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(211, 84, 0)",
            "overviewRulerColor": "rgba(211, 84, 0,.2)"
        }

        ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.yaml",
        "**/*.html",
        "**/*.css",
        "**/*.scss"
    ],

    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**"
    ],

    "todohighlight.maxFilesForSearch"  : 5120,
    "todohighlight.toggleURI"                : false,
    "breadcrumbs.enabled"                    : true,
    "terminal.integrated.rendererType" : "dom",

    "editor.rulers"   : [ 80, 120, 180 ],

    "workbench.colorCustomizations": {
    "editorRuler.foreground": "#ff4081"
}
}