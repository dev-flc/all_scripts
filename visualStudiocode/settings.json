{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "window.zoomLevel": 0,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "jspm_packages": true,
        "**/node_modules": true,
        "node_modules": true,
        ".sonar": true,
        "manifest.json": true,
        ".gitignore": true,
        ".editorconfig": true,
        "debug.log": true, 
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/node_modules": true,
    },
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.formatOnPaste": false,
    "editor.insertSpaces": false,
   // "editor.renderWhitespace": "all"
    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "NOTE:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(39, 174, 96)",
            "overviewRulerColor": "rgba(39, 174, 96,.2)"
        },
        {
            "text": "ALAN:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(155, 89, 182)",
            "overviewRulerColor": "rgba(155, 89, 182,.2)"
        },
        {
            "text": "ROGELIO:",
            "color": "#fff",
            "border": "1px",
            "borderRadius": "1px",
            "backgroundColor": "rgb(46, 134, 193)",
            "overviewRulerColor": "rgba(46, 134, 193,.2)"
        }
    ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.yaml",
        "**/*.html",
        "**/*.css",
        "**/*.scss"
    ],

    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**"
    ],

    "todohighlight.maxFilesForSearch": 5120,

    "todohighlight.toggleURI": false,
    "breadcrumbs.enabled": true,
    "terminal.integrated.rendererType": "dom"
}
